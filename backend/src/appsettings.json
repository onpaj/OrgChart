{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OrgChart": {
    "DataSourceType": "Url",
    "DataSourceUrl": "https://example.com/organization-structure.json",
    "UrlStorage": {
      "Url": "https://example.com/organization-structure.json",
      "TimeoutSeconds": 30,
      "RetryAttempts": 3,
      "StaticHeaders": {
        "User-Agent": "OrgChart-API/1.0"
      },
      "ValidateSslCertificate": true
    },
    "AzureStorage": {
      "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-account-key;EndpointSuffix=core.windows.net",
      "ContainerName": "orgchart",
      "BlobName": "organization-structure.json",
      "UseManagedIdentity": false,
      "StorageAccountName": "your-storage-account"
    },
    "Permissions": {
      "InsertEnabled": false,
      "UpdateEnabled": false,
      "DeleteEnabled": false
    }
  },
  "Authentication": {
    "Enabled": true,
    "Authority": "https://login.microsoftonline.com/{tenant-id}",
    "Audience": "your-app-registration-client-id"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:3001",
      "https://localhost:3001"
    ]
  }
}